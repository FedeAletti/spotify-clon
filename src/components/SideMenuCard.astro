---
import type { Playlist } from "@/lib/data"

interface Props {
	playlist: Playlist
}

const { playlist } = Astro.props
const { id, cover, albumId, artists, color, title } = playlist

const artistsString = artists.join(", ")
---

<a
	href={`/playlist/${id}`}
	class="relative flex p-2 overflow-hidden items-center gap-5 rounded-md hover:bg-zinc-800"
>
    <picture class="h-12 w-12 flex-none">
        <img
            src={cover}
            alt={title}
            class="h-full w-full object-cover rounded-md"
        />
    </picture>

    <div class="flex flex-auto flex-col truncate">
        <h4 class="text-sm">{title}</h4>
        <span class="text-xs text-gray-400">{artistsString}</span>
    </div>
</a>
